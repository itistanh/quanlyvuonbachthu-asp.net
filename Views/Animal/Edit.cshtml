@model PhamTheAnhKTPMK21B.Models.Animal

@{
    ViewData["Title"] = "Edit Animal";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-pencil-square"></i> Edit Animal
        </h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">

            <h4 class="fw-bold mb-3 text-secondary">Update Animal Information</h4>

            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="AnimalId" />

                <div class="mb-3">
                    <label asp-for="AnimalName" class="form-label fw-semibold"></label>
                    <input asp-for="AnimalName" class="form-control" />
                    <span asp-validation-for="AnimalName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Species" class="form-label fw-semibold"></label>
                    <input asp-for="Species" class="form-control" />
                    <span asp-validation-for="Species" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Age" class="form-label fw-semibold"></label>
                    <input asp-for="Age" class="form-control" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="HabitatId" class="form-label fw-semibold"></label>
                    <select asp-for="HabitatId" class="form-select" asp-items="ViewBag.HabitatId"></select>
                    <span asp-validation-for="HabitatId" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2 mt-4">
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-save"></i> Save Changes
                    </button>
                    <a asp-action="Index" class="btn btn-secondary px-4">
                        Cancel
                    </a>
                </div>
            </form>

        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
