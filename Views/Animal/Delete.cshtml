@model PhamTheAnhKTPMK21B.Models.Animal

@{
    ViewData["Title"] = "Delete Animal";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-danger">
            <i class="bi bi-exclamation-triangle"></i> Delete Animal
        </h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="card border-danger shadow-sm">
        <div class="card-body">

            <h4 class="text-danger fw-bold">Are you sure you want to delete this?</h4>
            <p class="text-muted">This action cannot be undone.</p>

            <hr />

            <dl class="row mb-4">
                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.AnimalName)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.AnimalName)</dd>

                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.Species)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Species)</dd>

                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.Age)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Age)</dd>

                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.Habitat)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Habitat.HabitatName)</dd>
            </dl>

            <form asp-action="Delete" class="d-flex gap-2">
                <input type="hidden" asp-for="AnimalId" />

                <button type="submit" class="btn btn-danger px-4">
                    <i class="bi bi-trash"></i> Delete
                </button>

                <a asp-action="Index" class="btn btn-outline-secondary px-4">
                    Cancel
                </a>
            </form>

        </div>
    </div>

</div>
