@model PagedResult<PhamTheAnhKTPMK21B.Models.Habitat>

@{
    ViewData["Title"] = "Habitats";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold">Danh sách môi trường sống</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">

            <!-- Search Form -->
            <form asp-action="Index" method="get" class="row g-2 mb-3">
                <div class="col-md-4">
                    <input type="text" name="searchString"
                           class="form-control"
                           placeholder="Tìm theo tên..."
                           value="@ViewData["CurrentSearch"]" />
                </div>
                <div class="col-md-auto">
                    <button type="submit" class="btn btn-outline-secondary">
                        <i class="bi bi-search"></i> Tìm kiếm
                    </button>
                </div>
            </form>

            <!-- Table -->
            <table class="table table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]"
                               class="text-white text-decoration-none">
                                HabitatName
                            </a>
                        </th>

                        <th>
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["ClimateSortParm"]"
                               class="text-white text-decoration-none">
                                Climate
                            </a>
                        </th>

                        <th>
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["AreaSortParm"]"
                               class="text-white text-decoration-none">
                                Area
                            </a>
                        </th>

                        <th class="text-center">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.HabitatName</td>
                            <td>@item.Climate</td>
                            <td>@item.Area</td>

                            <td class="text-center">

                                <a asp-action="Details" asp-route-id="@item.HabitatId"
                                   class="btn btn-sm btn-info text-white me-1">
                                    <i class="bi bi-eye"></i> Details
                                </a>

                                <a asp-action="Edit" asp-route-id="@item.HabitatId"
                                   class="btn btn-sm btn-warning text-white me-1">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>

                                <a asp-action="Delete" asp-route-id="@item.HabitatId"
                                   class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </a>

                            </td>
                        </tr>
                    }
                </tbody>

            </table>

            <!-- Pagination -->
            <nav aria-label="Page navigation" class="mt-3">
                <ul class="pagination justify-content-center">

                    @if (Model.Page > 1)
                    {
                        <li class="page-item">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-page="@(Model.Page - 1)"
                               asp-route-searchString="@ViewData["CurrentSearch"]">«</a>
                        </li>
                    }

                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.Page ? "active" : "")">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-page="@i"
                               asp-route-searchString="@ViewData["CurrentSearch"]">@i</a>
                        </li>
                    }

                    @if (Model.Page < Model.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-page="@(Model.Page + 1)"
                               asp-route-searchString="@ViewData["CurrentSearch"]">»</a>
                        </li>
                    }
                </ul>
            </nav>

        </div>
    </div>
</div>
