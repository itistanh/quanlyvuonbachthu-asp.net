@model PhamTheAnhKTPMK21B.Models.Habitat

@{
    ViewData["Title"] = "Delete Habitat";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-danger">
            <i class="bi bi-exclamation-triangle"></i> Delete Habitat
        </h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="card border-danger shadow-sm">
        <div class="card-body">

            <h4 class="fw-bold text-danger mb-3">Are you sure you want to delete this habitat?</h4>
            <p class="text-muted">This action cannot be undone.</p>

            <dl class="row mb-4">
                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.HabitatName)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.HabitatName)</dd>

                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.Climate)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Climate)</dd>

                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.Area)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Area)</dd>
            </dl>

            @if (ViewBag.ConfirmDelete == true)
            {
                <div class="alert alert-warning">
                    This habitat contains other animals. If deleted, those animals will be moved to <strong>Unknown Habitat</strong>!
                </div>

                <form asp-action="Delete" method="post" class="d-flex gap-2">
                    <input type="hidden" name="id" value="@Model.HabitatId" />
                    <input type="hidden" name="confirm" value="true" />
                    <button type="submit" class="btn btn-danger px-4">
                        <i class="bi bi-check-circle"></i> Confirm Delete
                    </button>
                    <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
                </form>
            }
            else
            {
                <form asp-action="Delete" method="post" class="d-flex gap-2">
                    <input type="hidden" name="id" value="@Model.HabitatId" />
                    <button type="submit" class="btn btn-danger px-4">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                    <a asp-action="Index" class="btn btn-secondary px-4">Back to List</a>
                </form>
            }

        </div>
    </div>

</div>
